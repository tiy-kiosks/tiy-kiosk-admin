<h1>Sign In</h1>

<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>

<p><em>Forgot your password?</em> - Prolly need to ask dorton to reset for you.</p>
